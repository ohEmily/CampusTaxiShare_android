<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >
 
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="60dp"
	    android:paddingRight="60dp"
	    android:orientation="vertical"
	    android:weightSum="1.0"
	    tools:context=".HomeActivity" 
	>

	<!-- Select destination -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_destination"
    />
    
    <Button 
        android:id="@+id/myDestinationPickerButton"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/button_destination"
        android:onClick="showDestinationPickerDialog"
    />
    
    <!-- Select dates -->
	<TextView
	    android:id="@+id/promptForDate"
    	android:layout_width="fill_parent" 
   		android:layout_height="wrap_content"
    	android:text="@string/prompt_date"    
    />
	
	<Button 
        android:id="@+id/myDatePickerButton"
        android:background="@drawable/custom_button" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_date"
        android:layout_gravity="center"
        android:onClick="showDatePickerDialog"
    />
	
	<TextView
	    android:id="@+id/showMyDate"
    	android:layout_width="fill_parent" 
   		android:layout_height="wrap_content"   
    />
    
	<!-- Select times -->
    <TextView 
    	android:layout_width="wrap_content"  
    	android:layout_height="wrap_content"
    	android:text="@string/prompt_times"  
    />
    
    <LinearLayout
        android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    >
	    <Button
	        android:background="@drawable/custom_button"
	        android:id="@+id/myEarlierTimePickerButton"
	        android:layout_weight="0.5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/button_earliest_time"
	        android:onClick="showTimePickerDialog"
	    />
	    
	    <Button
	        android:background="@drawable/custom_button"
	        android:id="@+id/myLaterTimePickerButton"
	        android:layout_weight="0.5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/button_latest_time"
	        android:onClick="showTimePickerDialog"
	    />
    </LinearLayout>
    
    <TextView
	    android:id="@+id/showMyTime"
    	android:layout_width="fill_parent" 
   		android:layout_height="wrap_content"   
    />
    
	</LinearLayout>
		<LinearLayout
	    android:id="@+id/footer"
	    android:layout_width="fill_parent"
   	 	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_alignParentBottom="true"
   	>
	   	<TextView
			android:id="@+id/link_to_logout"
		    android:layout_gravity="center"
		    style="@style/YellowFont"
		    android:text="@string/button_logout"
		    android:clickable="true"
		    android:onClick="logout"
		 />
	</LinearLayout>
</RelativeLayout>