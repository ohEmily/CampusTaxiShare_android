<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1.0"
    tools:context=".MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
     />
    
    <RadioGroup
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <RadioButton android:id="@+id/radio_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_destination"
        android:onClick="onRadioButtonClicked"
        />
    <RadioButton android:id="@+id/radio_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_date_time"
        android:onClick="onRadioButtonClicked"
        />
    <RadioButton android:id="@+id/radio_rally_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_rally_point"
        android:onClick="onRadioButtonClicked"
        />
</RadioGroup>

</LinearLayout>
