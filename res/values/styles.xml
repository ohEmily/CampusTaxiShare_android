<resources xmlns:android="http://schemas.android.com/apk/res/android">
     
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="MyAppTheme" parent="AppBaseTheme">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/myWhite</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="actionMenuTextColor">@color/myWhite</item>
    	<!--Support Library compatibility-->
    	<item name="background">@color/myBlack</item>
    </style>
    
    <style name="WhiteFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/myWhite</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="YellowFont" parent="WhiteFont">
        <item name="android:textColor">@color/myYellow</item>
    </style>
    
    <style name="FooterFont" parent="YellowFont">
        <item name="android:layout_gravity">center</item>
    </style> 
    
    <style name="LargeYellowFont" parent="YellowFont">
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="LargePinkFont" parent="LargeYellowFont">
        <item name="android:textColor">@color/myPink</item>
    </style>
    
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:textColor">@color/myPink</item>
		<item name="android:background">@color/myWhite</item>
	</style>
	
    <style name="button_text" >
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">@color/myWhite</item>
	    <item name="android:layout_gravity">center</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
  	</style>
    
</resources>